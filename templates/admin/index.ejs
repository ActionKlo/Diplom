<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">
<!-- ===== HEAD ===== -->

<head>
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="google" value="notranslate">
    <link href="../css/reset.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../chartist/dist/chartist.min.css">
    <link rel="stylesheet" type="text/css" href="../bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../bootstrap/dist/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>My App</title>
</head>
<!-- ===== /HEAD ===== -->
<!-- ===== BODY ===== -->

<body id="page1">
    <h1>ADMIN!</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Клиент</th>
                            <th>Оплаты</th>
                            <th>Посетители / Отказняки</th>
                            <th>Счёт</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < user.length; i++) { %>
                            <tr>
                                <th><%= user[i].name %><br><%= user[i].phone %><br><%= user[i].company %></th>
                                <th>2</th>
                                <th><%= result.totals[0][0] %> / <%= result.totals[0][1].toFixed(1) %>%
                                <br><div class="ct-chart ct-golden-section" id="chart1"></div></th>
                                <th>4</th>
                                <th><a class="btn btn-default" href="/admin/<%= user[i].services.metrika.id %>">Подробнее</a></th>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    
    <!-- ===== SCRIPT ===== -->
    <script src="../jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="../bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../chartist/dist/chartist.min.js" type="text/javascript"></script>
    <script src="../js/script.js" type="text/javascript"></script>
    <script src="../js/chartist.js" type="text/javascript"></script>

    <script type="text/javascript">
        var s = <%- JSON.stringify(result) %>;
                
        var d1 = JSON.stringify(s.data[0].metrics[0]);
        console.log(d1);
        console.log(s.data[0].metrics[0]);

        new Chartist.Line('.ct-chart', {
        labels: ['1', '2', '3', '4', '5'],
        series: [
            s.data[0].metrics[0]
        ]}, {
            fullWidth: true,
            showArea: true,
            chartPadding: {
                right: 40
            }
        });
    </script>
    <!-- ===== /SCRIPT ===== -->
</body>
<!-- ===== /BODY ===== -->

</html>