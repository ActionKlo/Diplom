<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">
<!-- ===== HEAD ===== -->
<head>
    <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="google" value="notranslate">
    <link href="../css/reset.css" rel="stylesheet">
    <link href="../css/bootstrap.css" rel="stylesheet">
    <link href="../css/bootstrap-theme.css" rel="stylesheet">
    <link href="../css/style.css" rel="stylesheet">
    <title>My App</title>
</head>
<!-- ===== /HEAD ===== -->
<!-- ===== BODY ===== -->
<body id="sign-up">
    <!-- ===== SIGN UP FORM ===== -->
    <div class="container">
        <div class="row">
            <form class="register-form" name="signup-form">
                <h1>Sign Up</h1>
                <div class="form-group">
                    <input name="username" type="text" placeholder="Full name" class="form-control" required>
                </div>
                <div class="form-group">
                    <input name="company" type="text" placeholder="Название компании" class="form-control" required>
                </div>
                <div class="form-group">
                    <input name="phone" type="tel" placeholder="Phone number" class="form-control" required>
                </div>
                <div class="form-group">
                    <input name="email" type="Email" placeholder="Email" class="form-control" required>
                </div>
                <div class="form-group">
                    <input name="url" type="text" placeholder="URL site" class="form-control" required>
                </div>
                <div class="form-group">
                    <input name="password" type="password" placeholder="Password" class="form-control" required>
                </div>
                <div class="form-group">
                    <input name="password1" type="password" placeholder="Confirm password" class="form-control" required>
                </div>
                <div id="error"></div>
                <button type="submit" class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>
    <!-- ===== /SIGN UP FORM ===== -->
    <!-- ===== SCRIPT ===== -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="../js/bootstrap.js"></script>
    <script src="../js/script.js"></script>
    <!-- ===== /SCRIPT ===== -->
</body>
<!-- ===== /BODY ===== -->
</html>